<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_toRightOf="@+id/modify_dialog_double_click_edit"
        android:layout_above="@+id/modify_dialog_double_click_edit"
        android:src="@drawable/modify_dialog_tap_click_delete"
        android:id="@+id/modify_dialog_double_click_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/modify_dialog_double_click_count"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/modify_dialog_double_click_edit"
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <ImageView-->
<!--        android:layout_above="@id/modify_dialog_double_click_count"-->
<!--        android:src="@drawable/key_mapping_double_click_up"-->
<!--        android:layout_width="20dp"-->
<!--        android:layout_height="20dp"/>-->
    <Button
        android:visibility="gone"
        android:id="@+id/modify_dialog_double_click_up"
        android:background="@drawable/key_mapping_double_click_up"
        android:layout_above="@id/modify_dialog_double_click_count"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <Button
        android:visibility="gone"
        android:id="@+id/modify_dialog_double_click_down"
        android:layout_below="@id/modify_dialog_double_click_count"
        android:background="@drawable/key_mapping_double_click_down"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:gravity="center"
        android:textColor="#D3D3D3"
        android:id="@+id/modify_dialog_double_click_edit"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/modify_dialog_tap_click_hint"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/modify_dialog_double_click_edit"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:text="@string/double_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>